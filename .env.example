# Токен Telegram-бота, полученный у @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# ID Telegram-группы, куда будут отправляться сообщения
GROUP_CHAT_ID=123456789

# ID треда (топика) в группе Telegram — если бот пишет в отдельный чат внутри группы
SUPPORT_THREAD_ID=1

# ID Google Таблицы, с которой работает бот
SPREADSHEET_ID=your_google_spreadsheet_id_here

# Путь к JSON-файлу сервисного аккаунта Google (указывается внутри контейнера или локального проекта)
SERVICE_ACCOUNT=service_account.json
